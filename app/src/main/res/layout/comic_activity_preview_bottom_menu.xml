                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/switch_module">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_module" />

                <TextView
                    android:id="@+id/tv_switch_module"
